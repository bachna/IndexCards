                <td>{{ words_in_quiz.quiz }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('words_in_quiz_show', { 'id': words_in_quiz.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('words_in_quiz_edit', { 'id': words_in_quiz.id }) }}">edit</a>
                        </li>
