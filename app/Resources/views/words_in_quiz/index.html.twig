    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Word</th>
                <th>Quiz</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for words_in_quiz in words_in_quizzes %}
